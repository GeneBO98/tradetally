# TradeTally Production Configuration
# Copy this file to .env and customize the values

# Database Configuration
DB_USER=trader
DB_PASSWORD=your_secure_database_password_here
DB_NAME=tradetally

# JWT Configuration (IMPORTANT: Change this!)
JWT_SECRET=your_super_secure_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=7d

# Email Configuration (Optional - for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password_or_app_password
EMAIL_FROM=noreply@tradetally.io

# Application Configuration
NODE_ENV=production
PORT=3000

# Analytics Configuration (Optional)
# Set this to your analytics domain (e.g., https://analytics.domain.com)
VITE_ANALYTICS_DOMAIN=
VITE_ANALYTICS_SITE_ID=

# API Keys for CUSIP Resolution (Optional but recommended)
# Get OpenFIGI API key from: https://www.openfigi.com/api
OPENFIGI_API_KEY=your_openfigi_api_key_here

# Get Gemini API key from: https://console.cloud.google.com/
GEMINI_API_KEY=your_gemini_api_key_here