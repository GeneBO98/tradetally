# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=tradetally_db

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_should_be_very_long_and_secure
JWT_EXPIRES_IN=7d

# Email Configuration (Optional)
EMAIL_HOST=your_smtp_host
EMAIL_PORT=587
EMAIL_USER=your_email_user
EMAIL_PASS=your_email_password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_DOMAIN=yourdomain.com

# DKIM Configuration (Recommended for better deliverability)
DKIM_PRIVATE_KEY=your_dkim_private_key
DKIM_SELECTOR=default

# Application Configuration
NODE_ENV=development
PORT=3000
ENABLE_SWAGGER=true

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
BILLING_ENABLED=false

# Frontend Configuration
FRONTEND_URL=http://localhost:5173
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173,http://127.0.0.1:3000

# API Keys
OPENFIGI_API_KEY=your_openfigi_api_key
FINNHUB_API_KEY=your_finnhub_api_key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key

# Registration Mode (open/closed)
REGISTRATION_MODE=open

# Analytics Configuration (Optional)
# Set this to your analytics domain (e.g., https://analytics.domain.com)
VITE_ANALYTICS_DOMAIN=
VITE_ANALYTICS_SITE_ID=

# Price Monitoring Service
# Set to 'false' to disable real-time price monitoring and alerts
ENABLE_PRICE_MONITORING=true

# Push Notifications (Future Feature)
ENABLE_PUSH_NOTIFICATIONS=false
FCM_SERVER_KEY=
APNS_KEY_ID=
APNS_TEAM_ID=
APNS_KEY_PATH=